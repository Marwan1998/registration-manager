<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/general.css">
    <link rel="stylesheet" href="css/footer.css" />
    <link type="css" rel="stylesheet" href="css/icons/" />
    <style>
        .marg.footer-distributed {
            margin-top: 0;
        }

        .leb {
            margin-bottom: 0px;
            font-size: 17px;
            width: 110px
        }
    </style>
</head>
<body>

<%- include('partials/navbar') %>

    <div class="text-center selectNone">
        <form id="formData" class="position-absolute top-50 start-50 translate-middle" method="POST">
            <div class="input-group mb-3">
                <span>
                    <p class="leb">Website name</p>
                </span>
                <input id="webnam" placeholder="Website name" />
            </div>
            <div class="input-group mb-3">
                <span>
                    <p class="leb">Username</p>
                </span>
                <input id="name" placeholder="Username" />
            </div>
            <div class="input-group mb-3">
                <span>
                    <p class="leb">Email</p>
                </span>
                <input id="email" placeholder="Email Address" />
            </div>
            <div class="input-group mb-3">
                <span>
                    <p class="leb">Password</p>
                </span>
                <input id="pass" placeholder="Password" />
            </div>
            <div class="input-group mb-3">
                <span>
                    <p class="leb">Country</p>
                </span>
                <input id="country" placeholder="Country Name" />
            </div>
            <div class="input-group mb-3">
                <span>
                    <p class="leb">Phone</p>
                </span>
                <input id="phone" placeholder="Phone Number" />
            </div>
            <br>
            <button type="submit" class="btn bg-primary btn-lg fitDiv" name="button">Add Register</button>
        </form>
    </div>
    <script>
        document.querySelectorAll('input').forEach((input, index) => {
            input.className = "form-control";
            input.type = "text";
            input.name = input.id;
            input.autocomplete = "off";
            (index <= 5) ? input.required = 'required': null;
            // if(index <= 5) input.required = 'required';
        });
        document.querySelectorAll("span").forEach(span => span.className = "input-group-text bg-info");
    </script>

<%- include("partials/footer") -%>